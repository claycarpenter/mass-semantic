<!DOCTYPE html>
<html>
<head>
  <title><%= Global.application.name %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Mass Semantic", root_path, :class => "navbar-brand" %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Snippets", snippets_path %></li>
        <li><a href="#0">Tags</a></li>
        <% if can? :create, Snippet %>
          <li><%= link_to "Add Snippet", new_snippet_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#0" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user.display_name, current_user %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In or Register", new_user_session_path %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<main class="container">
  <%= yield %>
</main>

</body>
</html>
