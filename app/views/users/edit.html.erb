<h1>Edit Your Profile</h1>

<%= form_for(@user) do |f| %>
  <%= render 'partials/user_error_messages' %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <%= f.submit "Update my profile", class: "btn btn-primary" %>
<% end %>
